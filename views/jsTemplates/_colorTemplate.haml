%script#colorTemplate{ :type => "text/html" }
	%input.preview{ :style => "background-color: {{rgba}}; color: {{textColor}}", :value => "{{color}}", :name => "color" }
	%table
		%tr
			%th{ :scope => "row" }
				%label{ :for => "red"} Red:
			%td
				%input{ :type => "range", :min => 0, :max => 255, :value => "{{red}}", :name => "red" }
			%td.num
				%input#red{ :type => "number", :min => 0, :max => 255, :value => "{{red}}", :name => "red" }
		%tr
			%th{ :scope => "row" }
				%label{ :for => "green"} Green:
			%td
				%input{ :type => "range", :min => 0, :max => 255, :value => "{{green}}", :name => "green" }
			%td.num
				%input#green{ :type => "number", :min => 0, :max => 255, :value => "{{green}}", :name => "green" }
		%tr
			%th{ :scope => "row" }
				%label{ :for => "blue"} Blue:
			%td
				%input{ :type => "range", :min => 0, :max => 255, :value => "{{blue}}", :name => "blue" }
			%td.num
				%input#blue{ :type => "number", :min => 0, :max => 255, :value => "{{blue}}", :name => "blue" }

		%tr
			%th{ :scope => "row" }
				%label{ :for => "alpha"} Opacity:
			%td
				%input{ :type => "range", :min => 0, :max => 100, :value => "{{alpha}}", :name => "alpha" }
			%td.num
				%input#alpha{ :type => "number", :min => 0, :max => 100, :value => "{{alpha}}", :name => "alpha" }
	%p.commit
		%button.cancel Cancel
		%button.ok OK
	%span.tr
		%span
